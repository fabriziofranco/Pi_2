<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#293462"
    tools:context=".One_Product">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top|center_horizontal" >


        <ImageView
            android:id="@+id/imagen2"
            android:layout_width="250dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp"
            android:layout_height="250dp">
        </ImageView>


        <TextView
            android:id="@+id/name"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#f7be16"
            android:text="AQUI VA el name"/>

        <TextView
            android:id="@+id/descripcion"
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:gravity="left"
            android:textColor="#FFF"
            android:textSize="15sp"
            android:background="@drawable/corners_no_background"
            android:layout_marginTop="25dp"
            android:padding="7dp"
            android:justificationMode="inter_word"
            android:text="AQUI VA LA DESCRIPCION"/>

        <EditText
            android:id="@+id/editname"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:backgroundTint="#FFC312"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="#f7be16"
            android:text="AQUI VA el name"/>

        <EditText
            android:id="@+id/editdescripcion"
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:gravity="left"
            android:visibility="gone"
            android:textColor="#FFF"
            android:textSize="15sp"
            android:background="@drawable/corners_no_background"
            android:layout_marginTop="25dp"
            android:padding="7dp"
            android:justificationMode="inter_word"
            android:text="AQUI VA LA DESCRIPCION"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_buttons"
                android:fontFamily="casual"
                android:text="Editar"
                android:textColor="#000"
                android:layout_marginTop="30dp"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="142dp"
                tools:layout_editor_absoluteY="601dp" />
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_buttons"
                android:fontFamily="casual"
                android:text="Borrar"
                android:textColor="#000"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="142dp"
                tools:layout_editor_absoluteY="601dp" />


        </LinearLayout>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corners_buttons"
            android:fontFamily="casual"
            android:text="Enviar"
            android:textColor="#000"
            android:visibility="invisible"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="601dp" />
        </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>