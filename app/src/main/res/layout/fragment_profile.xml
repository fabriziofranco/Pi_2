<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">




        <TextView
            android:layout_width="wrap_content"
            android:textColor="#FFF"
            android:id="@+id/usuario_profile"
            android:text="Aqui va el username"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">

        </TextView>


        <ImageButton
            android:id="@+id/papel"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@null"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cycle"> </ImageButton>

        <Button
            android:id="@+id/boton_productos"
            android:layout_width="180dp"
            android:layout_marginVertical="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/corners_buttons"
            android:fontFamily="casual"
            android:layout_marginTop="20dp"
            android:text="Mis productos"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:layout_marginVertical="40dp"
            android:id="@+id/boton_ofertas"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/corners_buttons"
            android:fontFamily="casual"
            android:layout_marginTop="20dp"
            android:text="Ofertas Recibidas"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>